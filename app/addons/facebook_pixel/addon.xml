<?xml version="1.0"?>
<addon scheme="3.0">
    <id>facebook_pixel</id>
    <version>1.0</version>
    <priority>2000</priority>
    <position>0</position>
    <default_language>en</default_language>
    <status>disabled</status>
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
    <settings edition_type="ROOT,STOREFRONT">
        <sections>
            <section id="general">
                <items>
                    <item id="pixel_id">
                        <type>input</type>
                    </item>
                    <item id="track_all_page_views">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="track_add_to_cart">
                        <type>checkbox</type>
                        <default_value>N</default_value>
                    </item>
                    <item id="track_order_placed">
                        <type>checkbox</type>
                        <default_value>N</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
</addon>
